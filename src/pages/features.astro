---
import SiteLayout from "../layouts/SiteLayout.astro";
import Thunder from "../components/icons/thunder.astro";
import Button from "../components/Button.astro";
import { Image } from "astro:assets";
import Logo from "../assets/features/smartBlocks.png";
import CustomersSay from "../components/CustomersSay.vue";
import MacBook from "../assets/features/MacBookPro16-min.png";
import { features } from "../utils/features";
import Icon from "../assets/features/icons.png";
import Faq from "../components/Faq.vue";
import Avatar from "../assets/landing_page/avatar-group.png";
import Site1 from "../assets/features/site1.png";
import Site2 from "../assets/features/site2.png";
import Site3 from "../assets/features/site3.png";
import Site4 from "../assets/features/site4.png";
---

<SiteLayout>
  <div
    class="h-full min-h-screen flex items-center justify-center flex-col container mx-auto"
  >
    <div
      class="container mx-auto mt-16 features flex items-center flex-col gap-y-5"
    >
      <h1
        class="text-4xl lg:text-[67.529px] text-center font-semibold leading-[135%]"
      >
        Introducing
      </h1>
      <Image
        class="w-full max-w-sm lg:max-w-full lg:w-[652.129px] mb-3 lg:mb-6"
        src={Logo}
        alt="smartbloks logo"
      />
      <p
        class="text-gray-25 text-center text-md lg:text-[25px] leading-[167%] capitalize font-light"
      >
        The Ultimate & Mobile App Designing Software Powered By A.I
      </p>

      <div class="flex items-center flex-col lg:flex-row gap-x-4">
        <Button
          class="w-[246px] h-[62px] mb-6 lg:mb-0 lg:mt-12 smart-blok__btn flex items-center justify-center gap-x-3"
        >
          <Thunder />
          <span>Build Your Website</span>
        </Button>
        <Button class="w-[224.75px] h-[62px] lg:mt-12 outline-btn px-4">
          <div class="flex items-center justify-center gap-x-4">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="17"
              height="19"
              viewBox="0 0 17 19"
              fill="none"
            >
              <path
                d="M15.2708 6.7496L5.74084 1.28418C5.22516 0.986401 4.63986 0.830408 4.04438 0.832044C3.4489 0.83368 2.86447 0.992885 2.35043 1.29349C1.8364 1.5941 1.41108 2.02539 1.11767 2.54357C0.824265 3.06175 0.673228 3.64835 0.679899 4.24379V15.2141C0.679899 16.1089 1.03537 16.9671 1.66811 17.5998C2.30085 18.2326 3.15903 18.5881 4.05386 18.5881C4.64621 18.587 5.22793 18.4306 5.74084 18.1342L15.2708 12.6688C15.7829 12.3725 16.208 11.9466 16.5036 11.4341C16.7991 10.9216 16.9547 10.3403 16.9547 9.74867C16.9547 9.15702 16.7991 8.57578 16.5036 8.06324C16.208 7.5507 15.7829 7.12489 15.2708 6.82852V6.7496ZM14.2843 10.8832L4.7543 16.4275C4.5407 16.5486 4.29938 16.6122 4.05386 16.6122C3.80834 16.6122 3.56702 16.5486 3.35342 16.4275C3.14042 16.3046 2.96355 16.1277 2.8406 15.9147C2.71764 15.7017 2.65293 15.46 2.65297 15.2141V4.20433C2.65293 3.95838 2.71764 3.71676 2.8406 3.50375C2.96355 3.29074 3.14042 3.11386 3.35342 2.99089C3.5679 2.87167 3.8085 2.80728 4.05386 2.80345C4.29905 2.80848 4.53937 2.87279 4.7543 2.99089L14.2843 8.49577C14.4973 8.61869 14.6743 8.79555 14.7973 9.00856C14.9203 9.22157 14.9851 9.46322 14.9851 9.70921C14.9851 9.9552 14.9203 10.1969 14.7973 10.4099C14.6743 10.6229 14.4973 10.7997 14.2843 10.9227V10.8832Z"
                fill="#1E252B"></path>
            </svg>
            <span>Watch How It Works</span>
          </div>
        </Button>
      </div>
    </div>

    <div class="mt-32 w-full">
      <Image
        class="w-screen h-full lg:min-h-[918.5px] mb-6"
        src={MacBook}
        alt="smartbloks logo"
      />
    </div>
  </div>

  <main>
    <div class="py-12 lg:py-24 lg:px-12 all-features">
      <div
        class="flex items-center justify-center flex-col py-14 lg:py-6 container mx-auto"
      >
        <div
          class="rounded-[192.033px] w-full h-full max-w-[15rem] min-h-[55px] lg:min-w-[358.142px] lg:min-h-[70.362px] light-bg-primary flex items-center justify-center"
        >
          <h4
            class="text-center font-bold lg:font-normal lg:text-[15px] text-primary"
          >
            Instant Setup
          </h4>
        </div>

        <h2 class="text-4xl lg:text-[55px] text-center font-bold my-8">
          Meet all the <br class="block lg:hidden" /> SmartBlocks Features
        </h2>
      </div>
      <div
        class="container mx-auto grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-16 h-full px-8 lg:px-12 mt-7 lg:mt-14"
      >
        {
          features.map((items) => (
            <div class="flex items-center justify-center flex-col lg:items-start lg:justify-start">
              <div class="my-6 w-[87px] h-[87px] rounded-full bg-softPrimary flex items-center justify-center p-4">
                <Image src={items.icon} alt="timer" />
              </div>
              <h3 class="text-darkish text-[21px] mb-4 font-bold uppercase text-center lg:text-left">
                {items.title}
              </h3>
              <p class="text-gray-35 text-[15px] lg:leading-[159.1%] lg:text-justify !font-Manrope text-center">
                {items.content}
              </p>
            </div>
          ))
        }
      </div>
    </div>

    <div class="flex items-center justify-center flex-col container mx-auto">
      <div
        class="integrations lg:rounded-[19.879px] w-full max-w-[1396px] min-h-[544px] my-20 px-24 py-12 flex items-center flex-col lg:flex-row lg:justify-between"
      >
        <div>
          <p
            class="text-gray-25 text-[22.407px] font-Manrope mb-2 leading-[159.1%]"
          >
            AMAZING FEATURES
          </p>
          <h2
            class="text-4xl lg:text-[45.91px] text-white font-bold mb-2 l lg:leading-[144px]"
          >
            Powerful integrations
          </h2>
          <p
            class="text-[#B6B6B6] text-xl lg:text-[24.849px] font-Manrope mb-2 lg:leading-[159.1%]"
          >
            We're a growing family of 382,081 designers and <br
              class="hidden lg:block"
            /> makers from around the world
          </p>
          <Button
            class="w-[274px] h-[67px] mt-7 mb-6 bg-primary rounded-[8.41px] !text-white !font-Manrope"
          >
            Get Strated, It’s Free
          </Button>
        </div>
        <div class="linear-shade">
          <Image
            class="lg:w-[500px] min-h-[500px] object-contain lg:object-contain"
            src={Icon}
            alt="frame"
          />
        </div>
      </div>
    </div>

    <div class="h-full py-24 lg:min-h-screen">
      <div class="flex items-center justify-center flex-col">
        <h3
          class="text-center text-4xl lg:text-[47px] font-bold lg:leading-[134.5%] mb-6 gradient px-2 lg:px-0"
        >
          Hundreds of thousands of customers <br class="hidden lg:block" />
           worldwide have put their trust in us.
        </h3>
        <p
          class="text-center text-xl lg:text-[24px] text-gray-10 !font-Manrope lg:leading-[145.6%] px-3 lg:px-0"
        >
          Our customers particularly valued the fact that we were always
          attentive <br class="hidden lg:block" /> to their needs. A large
          number of customers can't all be wrong.
        </p>
      </div>

      <div class="bg-[#F6F6F7] py-2 my-10">
        <CustomersSay client:load />
      </div>
    </div>
    <div class="flex items-center justify-center flex-col my-6">
      <div class="my-10">
        <h3
          class="text-4xl lg:text-[41px] text-darkish font-semibold my-4 font-Inter text-center"
        >
          Frequently asked questions
        </h3>
        <p class="text-[#667085] text-[22px] font-Inter text-center">
          Everything you need to <br class="block lg:hidden" /> know about the
          product and billing.
        </p>
      </div>
      <Faq client:visible />

      <div
        class="flex items-center justify-center flex-col my-6 w-full lg:max-w-[1200px]"
      >
        <div
          class="bg-darkish lg:rounded-[18.138px] w-full flex items-center justify-center flex-col py-16 lg:p-16"
        >
          <Image
            class="w-[136.036px] h-[63.484px] mb-8"
            src={Avatar}
            alt="avatar group"
          />
          <p
            class="text-gray-25 lg:text-[22px] font-medium mb-4 font-Inter text-center"
          >
            Still have questions?
          </p>
          <p
            class="text-white text-[20px] font-medium font-Inter text-center px-4"
          >
            Can’t find the answer you’re looking for? Please chat to our
            friendly team.
          </p>

          <Button
            class="py-[14px] px-[34.009px] mt-12 mb-6 bg-primary rounded-[8.41px] !text-white text-[18px] font-Inter"
          >
            Get in touch
          </Button>
        </div>
      </div>
    </div>

    <div
      class="lg:min-h-screen h-full lg:flex py-12 lg:py-64 overflow-x-hidden 2xl:container 2xl:mx-auto"
    >
      <Image
        class="w-[650.967px] h-[445.868px] object-contain relative lg:z-20"
        src={Site1}
        alt="site 1"
      />
      <Image
        class="w-[650.967px] h-[445.868px] object-contain lg:transform lg:-translate-x-72 -translate-y-44 lg:-translate-y-56 relative lg:z-50"
        src={Site2}
        alt="site 2"
      />

      <Image
        class="w-[650.967px] h-[445.868px] object-contain lg:transform -translate-y-80 lg:translate-y-36 lg:-translate-x-[36rem] relative lg:z-20"
        src={Site3}
        alt="site 3"
      />
      <Image
        class="w-[650.967px] h-[445.868px] object-contain lg:transform -translate-y-96 lg:-translate-y-0 lg:-translate-x-[44rem] relative lg:z-10"
        src={Site4}
        alt="site 4"
      />
    </div>
  </main>
</SiteLayout>
