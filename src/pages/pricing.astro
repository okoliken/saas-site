---
import SiteLayout from "../layouts/SiteLayout.astro";
import Button from "../components/Button.astro";
import Plans from "../components/Pricing.vue";
import CustomersSay from "../components/CustomersSay.vue";
import Faq from "../components/Faq.vue";
import Dashboard from "../assets/pricing/image-6-min.png";
import Theme from "../assets/pricing/image-8-min.png";
// import Pattern from "../assets/landing_page/pattern-min.png";
import Avatar from "../assets/landing_page/avatar-group.png";

import { Image } from "astro:assets";

import { plans, bookings, ecommerce, bookingTools } from "../utils/pricing";
const subscription = [
  {
    type: "Personal",
    price: "27",
    isRecommend: false,
  },
  {
    type: "Advanced",
    price: "47",
    isRecommend: true,
  },
  {
    type: "Business",
    price: "67",
    isRecommend: false,
  },
];
---

<SiteLayout>
  <div
    class="container pricing-bg mx-auto lg:mt-16 flex items-center flex-col gap-y-5"
  >
    <h1
      data-aos="fade-down"
      data-aos-duration="1500"
      class="text-4xl lg:text-[67.529px] text-center font-semibold leading-[135%]"
    >
      Choose A Plan
    </h1>

    <p
      data-aos="fade-down"
      data-aos-duration="1800"
      class="text-[#1E252B] text-center text-md lg:text-[24px] leading-[167%] capitalize font-light"
    >
      SmartBlocks gives you 100s of templates, unlimited pages & top grade
      hosting <br /> FREE. Upgrade to Premium and get even more.
    </p>

    <div
      data-aos="fade-up"
      data-aos-duration="1500"
      class="plan-chip text-center flex items-center justify-center my-4"
    >
      <p class="text-[#1E252B] font-Manrope text-[20px] leading-[156.1%]">
        Pay by month or year, and cancel any time.
      </p>
    </div>

    <div
      data-aos="fade-up"
      data-aos-duration="1500"
      class="border border-[#B6B6B6] rounded-full w-[207px] h-[53px] my-8 flex justify-between"
    >
      <p
        class="w-[112px] h-[53px] bg-primary rounded-full p-4 text-white text-[14.904px] font-bold cursor-pointer"
      >
        MONTHLY
      </p>
      <p
        class="w-[112px] h-[53px] p-4 text-[14.904px] font-bold cursor-pointer"
      >
        YEARLY
      </p>
    </div>
  </div>

  <div class="container mx-auto mt-12">
    <div class="pricing">
      <div class="flex flex-col lg:flex-row lg:justify-end w-full">
        {
          subscription.map((plans) => (
            <div
              class={
                plans.isRecommend
                  ? "bg-[#D9D9D933] p-[3.123rem] 2xl:p-[5.1rem]  text-center border-l border-[#B6B6B666] flex items-center justify-center flex-col relative"
                  : "p-[3.123rem] 2xl:p-[5.1rem] border-l border-[#B6B6B666] text-center flex items-center justify-center flex-col"
              }
            >
              {plans.isRecommend ? (
                <div
                  class="absolute top-0 transform -translate-y-6 border border-[#1E252B] w-[143.106px] h-[37.363px] 
                rounded-full bg-white flex items-center justify-center
                "
                >
                  <span> Most Popular</span>
                </div>
              ) : (
                ""
              )}

              <p class="transform -translate-y-4 font-bold">{plans.type}</p>
              <div class="flex items-center">
                <span class="text-[32.664px] text-[#1E252B] transform -translate-y-6">
                  $
                </span>
                <>
                  <h3 class="text-[#1E252B] text-[78.394px] font-bold">
                    {plans.price}
                  </h3>
                  <span class="transform translate-y-4 text-[#5C6A77]">
                    /mo
                  </span>
                </>
              </div>

              <Button class="bg-primary w-[219px] h-[50px] rounded-full text-white">
                Get Started
              </Button>
            </div>
          ))
        }
      </div>
    </div>
    <Plans plans={plans} client:only="vue" />

    <div class="flex items-center justify-between py-12">
      <div>
        <h3 class="text-darkish text-[30px] mb-1 font-medium">Bookings</h3>
        <p class="text-[16px] text-primary">
          Take bookings, paid bookings and sell tickets
        </p>
      </div>

      <div class="flex items-center gap-x-4 cursor-pointer">
        <p class="text-primary text-[16px]">Hide Features</p>
        <svg
          class="w-[17.342px] h-[8.671px]"
          xmlns="http://www.w3.org/2000/svg"
          width="21"
          height="13"
          viewBox="0 0 21 13"
          fill="none"
        >
          <path
            d="M1.65625 10.9542L10.3273 2.2832L18.9983 10.9542"
            stroke="#FD801B"
            stroke-width="3"
            stroke-linecap="round"
            stroke-linejoin="round"></path>
        </svg>
      </div>
    </div>
    <Plans plans={ecommerce} client:only="vue" />

    <div class="flex items-center justify-between py-12">
      <div>
        <h3 class="text-darkish text-[30px] mb-1 font-medium">
          Blogging Tools
        </h3>
        <p class="text-[16px] text-primary">
          Take bookings, paid bookings and sell tickets
        </p>
      </div>

      <div class="flex items-center gap-x-4 cursor-pointer">
        <p class="text-primary text-[16px]">Hide Features</p>
        <svg
          class="w-[17.342px] h-[8.671px]"
          xmlns="http://www.w3.org/2000/svg"
          width="21"
          height="13"
          viewBox="0 0 21 13"
          fill="none"
        >
          <path
            d="M1.65625 10.9542L10.3273 2.2832L18.9983 10.9542"
            stroke="#FD801B"
            stroke-width="3"
            stroke-linecap="round"
            stroke-linejoin="round"></path>
        </svg>
      </div>
    </div>
    <Plans plans={bookingTools} client:only="vue" />

    <div class="flex items-center justify-between py-12">
      <div>
        <h3 class="text-darkish text-[30px] mb-1 font-medium">Ecommerce</h3>
        <p class="text-[16px] text-primary">
          Take bookings, paid bookings and sell tickets
        </p>
      </div>

      <div class="flex items-center gap-x-4 cursor-pointer">
        <p class="text-primary text-[16px]">Hide Features</p>
        <svg
          class="w-[17.342px] h-[8.671px]"
          xmlns="http://www.w3.org/2000/svg"
          width="21"
          height="13"
          viewBox="0 0 21 13"
          fill="none"
        >
          <path
            d="M1.65625 10.9542L10.3273 2.2832L18.9983 10.9542"
            stroke="#FD801B"
            stroke-width="3"
            stroke-linecap="round"
            stroke-linejoin="round"></path>
        </svg>
      </div>
    </div>
    <Plans plans={bookings} client:only="vue" />
  </div>

  <div class="h-full py-24">
    <div class="flex items-center justify-center flex-col">
      <h3
        data-aos="fade-down"
        data-aos-duration="1500"
        class="text-center text-4xl lg:text-[47px] font-bold lg:leading-[134.5%] mb-6 gradient-text px-2 lg:px-0"
      >
        Hundreds of thousands of customers <br class="hidden lg:block" />
         worldwide have put their trust in us.
      </h3>
      <p
        data-aos="fade-up"
        data-aos-duration="1500"
        class="text-center text-xl lg:text-[24px] text-gray-10 !font-Manrope lg:leading-[145.6%] px-3 lg:px-0"
      >
        Our customers particularly valued the fact that we were always attentive


        <br class="hidden lg:block" /> to their needs. A large number of
        customers can't all be wrong.
      </p>
    </div>

    <div class="bg-[#F6F6F7] lg:py-6 my-10">
      <CustomersSay client:only="vue" />
    </div>
  </div>

  <div
    class="flex items-center flex-col lg:flex-row lg:justify-center my-5 2xl:my-24"
  >
    <div
      data-aos="fade-down"
      data-aos-duration="1500"
      class="get-started w-full lg:max-w-[1200px] lg:min-h-[590.413px] 2xl:max-w-[87rem] flex items-center 2xl:justify-between lg:flex-row flex-col lg:rounded-[19.879px]"
    >
      <!-- Pattern -->
      <div class="py-8 lg:py-10 lg:pl-20 h-full w-full lg:max-w-[661px] px-4">
        <h3
          class="text-darkish text-3xl lg:text-[32px] font-bold leading-[161.1%] my-4"
        >
          SmartBlocks: Is Your One-Stop Shop For Building STUNNING Websites
          Using A.I
        </h3>
        <Button
          class="w-[274px] h-[67px] mt-6 mb-6 bg-primary rounded-[8.41px] !text-white !font-Manrope"
        >
          Get Strated, It’s Free
        </Button>
        <p class="text-[#656565] lg:text-[20px] underline !font-Manrope">
          No credit card required • <span class="text-primary">
            See plans & pricing →</span
          >
        </p>
      </div>
      <div
        class="relative plane-bg bottom-0 lg:transform lg:translate-y-8 2xl:translate-y-0"
      >
        <Image
          class="h-[274px] lg:w-[433px] object-contain lg:transform lg:translate-y-20 lg:translate-x-20"
          src={Theme}
          alt="pattern image"
        />
        <Image
          class="h-[381px] lg:w-[481.517px] object-contain absolute top-28 lg:left-8"
          src={Dashboard}
          alt="pattern image"
        />
      </div>
    </div>
  </div>

  <div class="flex items-center justify-center flex-col my-6">
    <div class="my-10">
      <h3
        data-aos="fade-down"
        data-aos-duration="1500"
        class="text-4xl lg:text-[41px] text-darkish font-semibold my-4 font-Inter text-center"
      >
        Frequently asked questions
      </h3>
      <p
        data-aos="fade-up"
        data-aos-duration="1700"
        class="text-[#667085] text-xl lg:text-[22px] font-Inter text-center"
      >
        Everything you need to know about the product and billing.
      </p>
    </div>
    <Faq client:visible />

    <div
      class="flex items-center justify-center flex-col mb-16 w-full lg:max-w-[1200px] 2xl:max-w-[87rem]"
    >
      <div
        class="bg-darkish lg:rounded-[18.138px] w-full py-16 lg:p-16 flex items-center justify-center flex-col"
      >
        <Image
          data-aos="fade-down"
          data-aos-duration="1500"
          class="w-[136.036px] h-[63.484px] mb-8"
          src={Avatar}
          alt="avatar group"
        />
        <p
          data-aos="fade-down"
          data-aos-duration="1800"
          class="text-gray-25 lg:text-[22px] font-medium mb-4 font-Inter"
        >
          Still have questions?
        </p>
        <p
          data-aos="fade-up"
          data-aos-duration="1500"
          class="text-white text-[20px] font-medium font-Inter text-center"
        >
          Can’t find the answer you’re looking for? <br
            class="block lg:hidden"
          /> Please chat to our friendly team.
        </p>

        <Button
          class="py-[14px] px-[34.009px] mt-12 mb-6 bg-primary rounded-[8.41px] !text-white text-[18px] font-Inter"
        >
          Get in touch
        </Button>
      </div>
    </div>
  </div>
</SiteLayout>

<style>
  .plan-chip {
    border-radius: 128.33px;
    background: rgba(30, 37, 43, 0.08);
    width: 470px;
    height: 60px;
  }

  h1 {
    background: linear-gradient(
      90deg,
      #1e252b 4.01%,
      #fd801b 25.87%,
      #071521 50.12%
    );
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .pricing {
    border-radius: 20px 20px 0px 0px;
    border-top: 1px solid rgba(182, 182, 182, 0.4);
    border-left: 1px solid rgba(182, 182, 182, 0.4);
    border-right: 1px solid rgba(182, 182, 182, 0.4);
  }
</style>
